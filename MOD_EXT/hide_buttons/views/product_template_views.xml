<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="product_template_tree_description_view" model="ir.ui.view">
            <field name="name">product.template.hide.view.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">hide_buttons.hide_boton_standard_price_group</attribute>
              </xpath>
            </field>
        </record>

        <record id="product_product_tree_description_view" model="ir.ui.view">
            <field name="name">product.product.hide.view.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">hide_buttons.hide_boton_standard_price_group</attribute>
              </xpath>
            </field>
        </record>
    </data>
</odoo>



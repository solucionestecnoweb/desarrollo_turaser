<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="sale_order_view_form_vendor" model="ir.ui.view">
            <field name="name">sale.order.vendor.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='user_id']" position="replace"/>
              <xpath expr="//field[@name='partner_invoice_id']" position="after">
                <field name="user_id" string="Vendedor" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
              </xpath>
            </field>
        </record>
    </data>
</odoo>



<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="views_profession_tree" model="ir.ui.view">
        <field name="name">profession.tree</field>
        <field name="model">profession</field>
        <field name="arch" type="xml">
            <tree string="profession" editable="top" sample="1">
                <field name="name" decoration-bf="1"/>
            </tree>
        </field>
    </record>

    <record id="action_profession" model="ir.actions.act_window">
        <field name="name">Profesion</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">profession</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="service_flight_itinerary_view_form" model="ir.ui.view">
            <field name="name">service.flight.itinerary.view.form</field>
            <field name="model">product.service.flight.itinerary</field>
            <field name="arch" type="xml">
                <form string="service flight itinerary">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"  string="Activo"  widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="service_flight_itinerary_view_tree" model="ir.ui.view">
            <field name="name">service.flight.itinerary.view.tree</field>
            <field name="model">product.service.flight.itinerary</field>
            <field name="arch" type="xml">
                <tree string="service flight itinerary">
                    <field name="name" decoration-bf="1"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_service_flight_itinerary" model="ir.actions.act_window">
            <field name="name">Itinerario de Vuelo</field>
            <field name="res_model">product.service.flight.itinerary</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
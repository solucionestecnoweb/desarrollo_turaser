<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="product_template_tree_description_view" model="ir.ui.view">
            <field name="name">product.template.description.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='uom_id']" position="after">
                <field name="description" string="descripcion" optional="hide"/>
              </xpath>
            </field>
        </record>

        <record id="product_product_tree_description_view" model="ir.ui.view">
            <field name="name">product.product.description.view.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='uom_id']" position="after">
                <field name="description" string="descripcion" optional="hide"/>
              </xpath>
            </field>
        </record>
    </data>
</odoo>



<odoo>
    <record id="view_multi_product_form_wizard" model="ir.ui.view">
        <field name="name">multi.product.form.view.wizard</field>
        <field name="model">multi.product</field>
        <field name="arch" type="xml">
            <form string="Select Multiple product">
                <group>
                    <field name="product_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button class="btn-primary" name="add_product" type="object" string="Apply"/>
                    Or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_multi_product_wizard" model="ir.actions.act_window">
        <field name="name">Select Multiple Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multi.product</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
